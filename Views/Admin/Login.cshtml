@model LoginViewModel

<h1>Iniciar sesión: Modo Admin</h1>

<div class="container">
  <body class="text-center">
      <form asp-action="login" method="post" class="form-signin">
    <h1></h1>

    <img class="mb-4" src="~/images/Login.png" alt="" width="200" height="200">
    <h1 class="text-center">Iniciar Sesion</h1>
        </br>
    <label class="sr-only">Usuario</label>
    <input asp-for="Usuario" class="form-control" placeholder="Usuario">
        </br>

    <label for="inputPassword" class="sr-only">Contraseña</label>
    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
        </br>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar Sesion</button>

  </form>
  </body>
</div> 
@model Pet
<div class="container"  asp-validation-summary="All">
 <form asp-action="pet" method="post">
  <div class="form-group">
    <label>Nombre</label>
    <input type="text" class="form-control" asp-for="NombreMascota">
  </div>

  <div class="form-group">
    <label >Peso</label>
    <input type="number" class="form-control" asp-for="Peso">
  </div>

  <div class="form-group">
    <label>Codigo Mascota</label>
    <input type="number" class="form-control" asp-for="CodigoMascota">
  
  </div>
  <div class="form-group">
    <label>Edad</label>
    <input type="number" class="form-control" asp-for="Edad">
  </div>

  <div class="form-group">
    <label>Foto</label>
    <input type="text" class="form-control" asp-for="Foto">
  </div>

  <button type="submit" class="btn btn-primary">Registrar Mascota</button>
</form>

</div>

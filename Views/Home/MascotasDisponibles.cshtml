@model List<Mascota>

<div class ="text-center">
    </br>
    <h1>Mascotas para adopción</h1>

    <form asp-action="MascotasDisponibles" method="get">
        Filtrar por tipo mascota: 
        <select name="tipomascota">
            <option value="0">Todos</option>
            @foreach(var t in (List<TipoMascota>)ViewBag.Tipos) {
                <option value="@t.Id">@t.Nombre</option>
            }
        </select>
        <button>Filtrar</button>
    </form>

    @if (Model.Count == 0) {
        <p>Aún no hay mascotas para adoptar.</p>
    }
    </br>
    <div class="container">
        <div class="row mb-2">
            @foreach (var m in Model)
            {
            <div class="col-md-6">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-200 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                <h2 class="d-inline-block mb-2 text-primary">@m.NombreMascota</h2>
                <h5> Peso: @m.Peso  </h5>
                
                <p>Tipo: @m.Tipo.Nombre</p>
                </div>
                <div class="col-auto d-none d-lg-block">
                <img src="@m.Foto" width="200" style="image-center" class="rounded mx-auto d-block">
                
                </div>
            </div>
            </div>
            }
        </div>
    </div>
    </div>
</div>